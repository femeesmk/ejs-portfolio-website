
<%- include ../partials/header.ejs %>

<main class="container">
  <div class="jumbotron">
    <h1 class="display-4"><%= title %></h1>
    <p class="lead">List of business contacts!</p>
    <div class="new-contact text-right">
      <a href="/contact-list/add" class="btn btn-primary" role="button"> <i class="fas fa-plus-circle"></i> Add a Contact</a>
    </div>
    <br class="my-2">
    <div class="contact-lists">
      <table class="table table-hover table-responsive-sm">
        <thead class="thead-light">
          <tr class="d-flex">
            <th class="col-3">Name</th>
            <th class="col-3">Contact Number</th>
            <th class="col-3">Email</th>
            <th class="col-3"></th>
          </tr>
        </thead>
        <tbody>
          <% for (let count = 0; count < contactList.length; count++) { %>
            <tr class="d-flex contact-list-item">
              <td class="col-3"><%= contactList[count].name %></td>
              <td class="col-3"><%= contactList[count].phone %></td>
              <td class="col-3"><%= contactList[count].email %></td>
              <td class="text-right col-3">
                <a href="/contact-list/edit/<%= contactList[count]._id %>" class="btn-primary btn-sm" role="button"><i class="fa fa-pencil-alt"></i> Edit</a>

                <a href="/contact-list/delete/<%= contactList[count]._id %>" class="btn-danger btn-sm" role="button"><i class="fa fa-trash-alt"></i> Delete</a>
              </td>
            </tr>             
          <% } %>          
        </tbody>
      </table>
    </div>
  </div>
</main>

<%- include ../partials/footer.ejs %>