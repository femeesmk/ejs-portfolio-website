<%- include ../partials/header.ejs %>

<main class="container">
  <div class="jumbotron">
    <h1 class="display-4"><%= title %></h1>
    <p class="lead">Add a new business contact!</p>

    <br class="my-4">

    <div class="contact-creation row">
      <form class="col-sm-8" action="" method="post">
        <fieldset class="form-group">
          <label for="inputFirstName">Name</label>
          <input type="text" class="form-control" id="inputFirstName" placeholder="Enter Contact Name" name="name"
            value="" required>
        </fieldset>
        <fieldset class="form-group">
          <label for="inputNumber">Contact Number</label>
          <input type="text" class="form-control" id="inputNumber" placeholder="Enter Contact Number" name="phone"
            value="" required>
        </fieldset>
        <fieldset class="form-group">
          <label for="inputEmail">Email</label>
          <input type="email" class="form-control" id="inputEmail" placeholder="Enter Contact Email" name="email"
            value="" required>
        </fieldset>
        <fieldset class="form-buttons">
          <button class="btn btn-primary" type="submit"> <i class="fas fa-plus-circle "></i> Add Contact</button>
          <a href="/contact-list" class="btn btn-warning"> <i class="fas fa-undo" role="button"></i> Cancel</a>
        </fieldset>
      </form>
    </div>
    
  </div>

</main>

<%- include ../partials/footer.ejs %>